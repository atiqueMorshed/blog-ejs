<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="#title">Title</label>
        <input id="title" type="text" name="postTitle" class="form-control">
    </div>
    <div class="form-group">
        <label for="#post">Post</label>
        <textarea name="postContent" id="post" rows="5" class="form-control"></textarea>
    </div>
    <button type="submit" name="publishButton" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer"); -%>